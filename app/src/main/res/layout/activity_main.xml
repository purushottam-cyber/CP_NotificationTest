<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/infobox"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="24dp"
        android:background="@drawable/infogradient1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            style="@style/Text_blocks"
            android:textColor="@android:color/black"
            android:background="@drawable/buttongradient"
            android:text="@string/user_handel" />

        <EditText
            android:id="@+id/userhandel"
            style="@style/Text_blocks"
            android:hint="@string/hint"
            android:focusableInTouchMode="true"
            android:textColorHint="#fff"
            android:background="@drawable/buttongradient"
            android:textColor="#fff"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/getinbutton"
                android:background="@drawable/buttongradient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="14dp"
                android:textColor="#fff"
                android:text="@string/getin"
                android:textSize="24sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/infobox"
        android:background="@drawable/layoutgradient1"
        android:layout_marginTop="10dp"
        >

    </LinearLayout>
</RelativeLayout>